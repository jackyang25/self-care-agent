# copy to `.env` and fill in values as needed.
# secrets: keep them in your local `.env` / secret manager; never commit real values.

# ==========================================
# REQUIRED (Streamlit & WhatsApp demo)
# ==========================================

OPENAI_API_KEY=

# ==========================================
# OPTIONAL (WhatsApp demo)
# ==========================================

WHATSAPP_VERIFY_TOKEN=
WHATSAPP_ACCESS_TOKEN=
WHATSAPP_PHONE_NUMBER_ID=

# ==========================================
# OPTIONAL (LangSmith observability)
# ==========================================

LANGCHAIN_TRACING_V2=true
LANGCHAIN_API_KEY=
LANGCHAIN_PROJECT=gh-ai-self-care

# ==========================================
# OPTIONAL (defaults exist, no need to paste)
# ==========================================

# agent model configuration
AGENT_MODEL=gpt-4o
AGENT_TEMPERATURE=0.0

# embeddings configuration
EMBEDDING_MODEL=text-embedding-3-small

# rag configuration
RAG_LIMIT_DEFAULT=5
RAG_MIN_SIMILARITY=0.35

# postgres configuration (docker-compose supplies these defaults)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=selfcare
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# webhook server configuration
WEBHOOK_HOST=0.0.0.0
WEBHOOK_PORT=8000
