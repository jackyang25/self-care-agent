# ==============================================================================
# REQUIRED: OpenAI Configuration
# ==============================================================================
OPENAI_API_KEY=your_openai_api_key_here

# ==============================================================================
# OPTIONAL: LangSmith (for tracing and cost auditing)
# ==============================================================================
# Sign up at https://smith.langchain.com to get your API key
# Automatically traces all LangGraph runs with costs and token usage
LANGCHAIN_TRACING_V2=true
LANGCHAIN_API_KEY=your_langsmith_api_key_here
LANGCHAIN_PROJECT=gh-ai-self-care

# ==============================================================================
# OPTIONAL: WhatsApp Integration
# ==============================================================================
# Only needed if using the WhatsApp webhook (webhook_server.py)
# See docs/whatsapp.md for detailed setup instructions
WHATSAPP_VERIFY_TOKEN=your_verify_token_here
WHATSAPP_ACCESS_TOKEN=your_meta_access_token_here
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id_here
WHATSAPP_WEBHOOK_SECRET=your_app_secret_here
